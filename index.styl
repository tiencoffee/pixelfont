*, *:before, *:after
	box-sizing border-box
::-webkit-scrollbar
	appearance none
	width 16px
	height 16px
	background #eee
::-webkit-scrollbar-thumb
	background #bbb
	&:active
		background #888
:focus
	outline 0
@import "//fonts.googleapis.com/css?family=Barlow:500,700"
@import "//fonts.googleapis.com/css?family=Roboto:500,700"
body
	margin 0
	font 15px "Barlow","Roboto",sans-serif
	font-weight 500
	overflow hidden
	user-select none
	cursor default
@font-face
	font-family "Pixel"
	src url("tmp/font.woff2")
body
	font 38px "Pixel","Barlow","Roboto",sans-serif
input[type=text]
input[type=number]
input[type=password]
input[type=""]
input:not([type])
	width 100%
	padding 4px 8px
	border 0
	font inherit
input[type=checkbox]
	appearance none
	position relative
	width 20px
	height 20px
	min-width 20px
	min-height 20px
	margin 0 8px 0 0
	vertical-align middle
	background #fff
	&:checked
		background url("check.png") no-repeat #07d
.active
	background #07d !important
	color #fff !important
.main
	position absolute
	inset 0
	display flex
	background #eee
.cates
	width 15%
	overflow-x hidden
	overflow-y auto
.cate
	padding 4px 8px
	border-bottom solid 1px #ddd
.active> .cate-range
	color #ccc
.cate-range
	font-size 10px
	color #888
.pages
	width 5%
	overflow-x hidden
	overflow-y auto
.page
	padding 4px 8px
	border-bottom solid 1px #ddd
.chrs
	width 30%
	display grid
	grid-template-columns repeat(auto-fill,minmax(48px,auto))
	grid-auto-rows 80px
	grid-gap 1px
	text-align center
	overflow-x hidden
	overflow-y auto
.chr
	display flex
	flex-direction column
	justify-content center
	align-items center
	box-shadow 0 0 0 1px #ddd
	&:hover
		position relative
		box-shadow 0 0 0 1px inset #ccc,0 0 0 2px #ccc
		z-index 1
.chr-hasData
	background #fff
	color #e10
.chr-img
	image-rendering pixelated
	zoom 2
.chr-chr
	font-size 20px
.board
	padding 16px 0 0 8px
	display flex
	flex-direction column
.canvas
	position relative
	display inline-block
.grid
	position absolute
	inset 0 1px 1px 0
	background url("grid.png")
.grid-chr
	position absolute
	left 0
	bottom 120px
	font-size 198px
	line-height .8
	white-space nowrap
	color #8882
.measure-hor
	position absolute
	width 1px
	height 100%
.measure-ver
	position absolute
	width 100%
	height 1px
#canvas
	position relative
	display block
	image-rendering pixelated
	zoom 20
.tools
	display flex
	flex-direction column
	flex-grow 1
.props
	padding 8px 16px
	flex-grow 1
.actions
	padding 8px 16px
.candraw
	position absolute
	inset 0
	z-index 20
#hoverChrPopperEl
	max-width 240px
	padding 8px 16px
	border-radius 8px
	display flex
	flex-direction column
	align-items center
	font-size 13px
	text-align center
	background #000c
	color #fff
	z-index 5
	.field
		margin-bottom 4px
.field
	margin-bottom 8px
	display flex
	align-items center
	&:last-child
		margin-bottom 0
